<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.simper.creation.SimperTestResultActivity">

    <!-- Action Bar -->
    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/testResultTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/text_simper_creation"
        android:textAlignment="center"
        android:textColor="#19863E"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar1" />

    <ImageView
        android:id="@+id/step_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scaleType="center"
        android:src="@drawable/step_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/testResultTitle"
        tools:ignore="ContentDescription" />

    <!-- Body -->
    <TextView
        android:id="@+id/nik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_nik"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/layout_nik"
        app:layout_constraintEnd_toStartOf="@id/layout_nik"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_nik" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_nik"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="220dp"
        android:layout_height="58dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step_7"
        app:placeholderText="317407XXXXXXXXXX"
        app:placeholderTextColor="#B0B0B0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_nik"
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_nama"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/layout_nama"
        app:layout_constraintEnd_toStartOf="@id/layout_nama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_nama" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_nama"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="220dp"
        android:layout_height="58dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_nik"
        app:placeholderText="Nama Lengkap"
        app:placeholderTextColor="#B0B0B0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_nama"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/groundTestScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_salinan_groundtest"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/layout_scan_groundtest"
        app:layout_constraintEnd_toStartOf="@id/layout_scan_groundtest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_scan_groundtest" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_scan_groundtest"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="220dp"
        android:layout_height="58dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:background="#EFEDEE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_nama">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_scan_groundtest"
            android:layout_width="match_parent"
            android:textColor="#B0B0B0"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="14sp"
            android:cursorVisible="false"
            android:text="@string/button_choose_image"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#B8DE9C"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/button_send"
        android:textColor="#03821F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_scan_groundtest" />
</androidx.constraintlayout.widget.ConstraintLayout>